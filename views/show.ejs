<%- include ("partials/header.ejs") %>


<div class="container mt-5" >
	<div class="row">
	
		<div class="card m-1" >
			<img src="<%= blog.imagen %>" class="card-img-top" alt="...">
			<div class="card-body">
					<h5 class="card-title"><%= blog.titulo %></h5>
					<% if(blog.cuerpo) {  %>
					<p class="card-text"><%= blog.cuerpo %>...</p>
					<% }  %>
					<p class="card-text"><%= blog.fecha.toDateString() %></p>
					<a href="/blogs/<%= blog._id %>/edit" class="btn btn-primary">Editar</a>
					<form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
					  <button class="btn btn-danger">
						  Eliminar
						</button>
				  </form>
				    
			</div>
		</div>
			
	</div>
</div>







<%- include ("partials/footer.ejs") %>